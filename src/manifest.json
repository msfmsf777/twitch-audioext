{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.1.0",
  "minimum_chrome_version": "116",
  "default_locale": "en",
  "permissions": ["identity", "storage", "scripting", "activeTab"],
  "host_permissions": ["https://id.twitch.tv/*", "https://api.twitch.tv/*", "<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "__MSG_extensionDefaultTitle__"
  },
  "web_accessible_resources": [
    {
      "resources": ["content/audio-worklet.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
